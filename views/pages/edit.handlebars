{{#each erros}}
    <div class="msg error">{{message}}</div>
{{else}}

{{/each}}
<div class="create_edit">
    <h1>Editar usuário:</h1>
    <form action="/main/edit" method="post">
        <input type="hidden" name="id" value="{{cadastro._id}}">
        <label for="name">Nome:</label>
        <input type="text" name="name" id="name" value="{{cadastro.name}}" required>
        <br>
        <label for="age">Idade:</label>
        <input type="number" name="age" id="age" value="{{cadastro.age}}" required>
        <br>
        <button type="submit">Confirmar edição</button>
    </form>
</div>